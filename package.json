{
  "name": "xize-auto-parts",
  "version": "1.0.0",
  "description": "Shandong Xize Auto Parts Co., Ltd. - Professional website",
  "author": "Xize Auto Parts",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --minify",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/styles.css --watch",
    "start": "nest start",
    "start:dev": "concurrently \"npm run dev:css\" \"nest start --watch\"",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "hbs": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.1.3"
  }
}
